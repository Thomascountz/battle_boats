#!/usr/bin/env ruby

require "battle_boats/engine"
require "battle_boats/fleet"
require "battle_boats/random_fleet_deployer"
require "battle_boats/manual_fleet_deployer"

enemy_fleet = BattleBoats::Fleet.new
enemy_board = BattleBoats::RandomFleetDeployer.new.deploy(enemy_fleet)

ally_fleet = BattleBoats::Fleet.new
ally_board = BattleBoats::ManualFleetDeployer.new.deploy(ally_fleet)

engine = BattleBoats::Engine.new(board: enemy_board)
engine.start

